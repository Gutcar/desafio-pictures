<div id="<%= dom_id picture %>">
  <div class="row d-flex justify-content-center">
    <% picture.images.each do |x| %>
      <div class="col m-3 d-flex justify-content-center">
        <%= image_tag x, class: 'rounded wi-500' %>
      </div>    
    <% end %>
  </div>
  <div class="d-flex align-items-center">
    <%= image_tag picture.user.avatar, class: "rounded-circle wi-50 m-2" %>
    <h5><%= picture.user %></h5>
  </div>
  <p class="font-25"><%= picture.legend %></p>
</div>

